<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/farmingview"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Experience: "
        android:id="@+id/textView_exp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="43dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignTop="@+id/textView_exp"
        android:layout_toRightOf="@+id/textView_exp"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Level:"
        android:id="@+id/textView_lvl"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView_exp"
        android:layout_alignLeft="@+id/textView_exp"
        android:layout_alignStart="@+id/textView_exp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/textView_lvl_value"
        android:layout_alignBottom="@+id/textView_lvl"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Gold:"
        android:id="@+id/textView_gold"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView_lvl"
        android:layout_alignLeft="@+id/textView_lvl"
        android:layout_alignStart="@+id/textView_lvl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_gold_value"
        android:layout_alignBaseline="@+id/textView_gold"
        android:layout_alignBottom="@+id/textView_gold"
        android:layout_alignLeft="@+id/textView_lvl_value"
        android:layout_alignStart="@+id/textView_lvl_value"
        android:layout_alignRight="@+id/textView_lvl_value"
        android:layout_alignEnd="@+id/textView_lvl_value" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/imageView_player_img"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView_lvl" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/imageView_placeholder"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView_gold_value"
        android:layout_toEndOf="@+id/textView_gold_value"
        android:layout_marginLeft="196dp"
        android:layout_marginStart="196dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_player_hp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/imageView_player_img"
        android:layout_alignLeft="@+id/textView_gold"
        android:layout_alignStart="@+id/textView_gold"
        android:indeterminate="false"
        android:layout_alignRight="@+id/textView_gold_value"
        android:layout_alignEnd="@+id/textView_gold_value" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_mob_hp"
        android:layout_alignTop="@+id/progressBar_player_hp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_marginRight="50dp"
        android:indeterminate="false"
        android:layout_alignLeft="@+id/imageView_placeholder"
        android:layout_alignStart="@+id/imageView_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Strength:"
        android:id="@+id/textView_player_str"
        android:layout_below="@+id/progressBar_player_hp"
        android:layout_alignLeft="@+id/progressBar_player_hp"
        android:layout_alignStart="@+id/progressBar_player_hp"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/imageView_player_img"
        android:layout_alignEnd="@+id/imageView_player_img"
        android:textColor="#fffff9fc" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_player_str_value"
        android:layout_alignTop="@+id/textView_player_str"
        android:layout_alignLeft="@+id/textView_gold_value"
        android:layout_alignStart="@+id/textView_gold_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mob name:"
        android:id="@+id/textView_mob_name"
        android:layout_alignBottom="@+id/textView_player_str_value"
        android:layout_alignLeft="@+id/progressBar_mob_hp"
        android:layout_alignStart="@+id/progressBar_mob_hp"
        android:textColor="#fffff9fc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_mob_name_value"
        android:layout_alignBottom="@+id/textView_mob_name"
        android:layout_toRightOf="@+id/textView_mob_name"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignRight="@+id/progressBar_mob_hp"
        android:layout_alignEnd="@+id/progressBar_mob_hp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mob armor:"
        android:id="@+id/textView_mob_armor"
        android:layout_below="@+id/textView_mob_name"
        android:layout_alignLeft="@+id/textView_mob_name"
        android:layout_alignStart="@+id/textView_mob_name"
        android:layout_marginTop="19dp"
        android:textColor="#fffff9fc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_mob_armor_value"
        android:layout_alignTop="@+id/textView_mob_armor"
        android:layout_alignLeft="@+id/textView_mob_name_value"
        android:layout_alignStart="@+id/textView_mob_name_value"
        android:layout_alignRight="@+id/textView_mob_name_value"
        android:layout_alignEnd="@+id/textView_mob_name_value" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/imageView_mob_img"
        android:layout_alignTop="@+id/imageView_placeholder"
        android:layout_toRightOf="@+id/imageView_placeholder"
        android:layout_toEndOf="@+id/imageView_placeholder"
        android:layout_marginLeft="114dp"
        android:layout_marginStart="114dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Town"
        android:id="@+id/button_back_to_town"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonOnClickLoad" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button_Start"
        android:layout_alignTop="@+id/button_back_to_town"
        android:layout_alignRight="@+id/textView_mob_name"
        android:layout_alignEnd="@+id/textView_mob_name" />
</RelativeLayout>
